# -*- mode: sh -*-

# Source .seacrest things if they exist
if [ -d $HOME/.seacrest ]; then
    source $HOME/.seacrest/shell/sources/env
fi

export EDITOR=vim
export DOTFILES=$HOME/.dotfiles
# export IPADDRESS=$(ifconfig en0 | grep inet | awk '{print $2}')
export PUPPETLABS=$HOME/workspace/puppetlabs
export VISUAL=$EDITOR
export GOPATH_GO=$HOME/workspace/go
export GOPATH_BAZEL=/home/vagrant/bazel/execroot/puppet_discovery/bazel-out/k8-fastbuild/bin/path
export GOPATH=$GOPATH_GO:$GOPATH_BAZEL
export PATH=$HOME/bin:$GOPATH_GO/bin:$PATH

export RBENV_ROOT=/usr/local/opt/rbenv
if which rbenv > /dev/null; then
    eval "$(rbenv init -)"
fi
