#!/usr/bin/env bash

source $DOTFILES/utils/log.sh

{
    cd ~/.emacs.d/
    echo "> UPGRADE"
    yes | make upgrade
    echo "> UPDATE"
    yes | make update
    echo "> CLEAN"
    make clean
    echo "> MAKE"
    yes | make
    echo "> COMPILE"
    yes | make compile
    echo "> DOCTOR"
    make doctor
} 2>&1 | log $0
