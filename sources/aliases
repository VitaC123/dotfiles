#!/bin/sh

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias pp='cd $PUPPETLABS'
alias pps='cd $PUPPETLABS/puppet-server'

# Verify destruction
alias rm='rm -iv' # Verbose, print removed files
alias mv='mv -i'
alias cp='cp -i'

# List directory contents
# -h  Human-readable file sizes
# -G  Colored output
# -F  Append special character denoting file type
# -o  Long format, omit owner
# -g  Long format, omit group
alias ls='ls -hG'
alias ll='ls -og'
alias la='ls -A'
alias l1='ls -1'

# Shortcuts
alias tmux='tmux -2' # Ensure 256 colors
alias gemacs='/Applications/Emacs.app/Contents/MacOS/Emacs'
